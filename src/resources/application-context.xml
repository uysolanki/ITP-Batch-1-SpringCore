<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

   <context:annotation-config />
   
    <bean id="engine" class="com.itp.model.Engine">    
    <constructor-arg value="1500"></constructor-arg>
    <constructor-arg value="15"></constructor-arg>
    <constructor-arg value="Petrol"></constructor-arg>
    <constructor-arg value="Bajaj"></constructor-arg>
    </bean>
			
     <bean id="e2" class="com.itp.model.Engine">    
   	 <property name="engineHP">
   	 	<value>2500</value>	
   	 </property>
   	 
   	 <property name="engineType">
   	 	<value>Diesel</value>	
   	 </property>
   	 
   	 <property name="engineMfgName">
   	 	<value>Tata</value>	
   	 </property>
   	 
   	 <property name="engineLitre">
   	 	<value>25</value>	
   	 </property>
    </bean>
    
    <bean id="gear" class="com.itp.model.Gear">    
    <constructor-arg value="6"></constructor-arg>
    <constructor-arg value="2024"></constructor-arg>
    <constructor-arg value="black"></constructor-arg>
    <constructor-arg value="Honda"></constructor-arg>
    </bean>
    
    
    <bean id="c1" class="com.itp.model.Car">    
    <constructor-arg value="2024"></constructor-arg>
    <constructor-arg value="Grey"></constructor-arg>
    <constructor-arg value="Thar"></constructor-arg>
    <constructor-arg value="Mahindra"></constructor-arg>
    <constructor-arg ref="e2"></constructor-arg>
    <constructor-arg ref="gear"></constructor-arg>
    </bean>
    
    <bean id="c2" class="com.itp.model.Car" autowire="byName">    
    <constructor-arg value="2022"></constructor-arg>
    <constructor-arg value="White"></constructor-arg>
    <constructor-arg value="Swift"></constructor-arg>
    <constructor-arg value="Maruti"></constructor-arg>
    </bean>
    
    <bean id="p1" class="com.itp.model.Player">  <!-- init-method="abc" destroy-method="xyz"> -->    
    <constructor-arg value="18"></constructor-arg>
    <constructor-arg value="Virat"></constructor-arg>
    <constructor-arg value="100"></constructor-arg>
    <constructor-arg value="9000"></constructor-arg>
    </bean>
    
</beans>