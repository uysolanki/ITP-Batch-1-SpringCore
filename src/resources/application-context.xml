<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="e1" class="com.itp.model.Engine">    
    <constructor-arg value="1500"></constructor-arg>
    <constructor-arg value="15"></constructor-arg>
    <constructor-arg value="Petrol"></constructor-arg>
    <constructor-arg value="Bajaj"></constructor-arg>
    </bean>
			
     <bean id="e2" class="com.itp.model.Engine">    
   	 <property name="engineHP">
   	 	<value>2500</value>	
   	 </property>
   	 
   	 <property name="engineType">
   	 	<value>Diesel</value>	
   	 </property>
   	 
   	 <property name="engineMfgName">
   	 	<value>Tata</value>	
   	 </property>
   	 
   	 <property name="engineLitre">
   	 	<value>25</value>	
   	 </property>
    </bean>
    
    <bean id="g1" class="com.itp.model.Gear"  scope="prototype">    
    <constructor-arg value="6"></constructor-arg>
    <constructor-arg value="2024"></constructor-arg>
    <constructor-arg value="black"></constructor-arg>
    <constructor-arg value="Honda"></constructor-arg>
    </bean>
    
    
    <bean id="c1" class="com.itp.model.Car">    
    <constructor-arg value="2024"></constructor-arg>
    <constructor-arg value="Grey"></constructor-arg>
    <constructor-arg value="Thar"></constructor-arg>
    <constructor-arg value="Mahindra"></constructor-arg>
    <constructor-arg ref="e1"></constructor-arg>
    <constructor-arg ref="g1"></constructor-arg>
    </bean>
    
</beans>